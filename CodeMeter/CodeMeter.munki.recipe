<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads CodeMeter dmg and imports into Munki.</string>
    <key>Identifier</key>
    <string>com.github.robperc.munki.CodeMeter</string>
    <key>Input</key>
    <dict>
        <key>MUNKI_REPO_SUBDIR</key>
        <string>apps</string>
        <key>NAME</key>
        <string>CodeMeter</string>
        <key>pkginfo</key>
        <dict>
			<key>name</key>
			<string>%NAME%</string>
			<key>description</key>
			<string>The CodeMeter Runtime for Mac OS X.</string>
		</dict>
    </dict>
    <key>MinimumVersion</key>
    <string>0.2.0</string>
    <key>Process</key>
    <array>
		<dict>
			<key>Processor</key>
			<string>DeprecationWarning</string>
			<key>Arguments</key>
			<dict>
				<key>warning_message</key>
				<string>Recipes in the robperc-recipes repository are deprecated and will soon be removed. Reply to this GitHub issue if you maintain an AutoPkg org repository and would like to take ownership of this recipe: https://github.com/autopkg/robperc-recipes/issues/13</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>http://www.graphisoft.com/downloads/protection_key.html</string>
				<key>re_pattern</key>
				<string>(?P&lt;path&gt;/ftp/techsupport/downloads/Licensing/CodeMeter/[^/]*/CmRuntimeUserKEXT3G_[^"]*)</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>URLDownloader</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>http://www.graphisoft.com%path%</string>
				<key>filename</key>
				<string>%NAME%.dmg</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>FlatPkgUnpacker</string>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%</string>
				<key>flat_pkg_path</key>
				<string>%pathname%/CmInstall.pkg</string>
				<key>purge_destination</key>
				<true/>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>com.github.autopkg.robperc.recipes.Processors/CmDistributionModifier</string>
			<key>Arguments</key>
			<dict>
				<key>distribution</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%/Distribution</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>FlatPkgPacker</string>
			<key>Arguments</key>
			<dict>
				<key>destination_pkg</key>
				<string>%RECIPE_CACHE_DIR%/CmInstall.pkg</string>
				<key>source_flatpkg_dir</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%</string>
			</dict>
		</dict>
        <dict>
	        <key>Processor</key>
	        <string>MunkiImporter</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/CmInstall.pkg</string>
                <key>repo_subdirectory</key>
                <string>%MUNKI_REPO_SUBDIR%</string>
            </dict>
        </dict>
    </array>
</dict>
</plist>
