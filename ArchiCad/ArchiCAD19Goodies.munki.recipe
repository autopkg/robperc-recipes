<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads ArchiCad19 Goodies dmg and imports into Munki.</string>
    <key>Identifier</key>
    <string>com.github.robperc.munki.ArchiCAD19Goodies</string>
    <key>Input</key>
    <dict>
        <key>MUNKI_REPO_SUBDIR</key>
        <string>apps</string>
        <key>NAME</key>
        <string>ArchiCAD19Goodies</string>
		<key>URL</key>
		<string>http://www.graphisoft.com/downloads/</string>
    </dict>
    <key>MinimumVersion</key>
    <string>0.2.0</string>
    <key>Process</key>
    <array>
		<dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>%URL%</string>
				<key>re_pattern</key>
				<string>(?P&lt;path&gt;http://www.graphisoft.com/ftp/techsupport/downloads/goodies19/USA/Goodies_Installer[^\.]*.dmg)</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>URLDownloader</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>%path%</string>
				<key>filename</key>
				<string>%NAME%.dmg</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>AppDmgVersioner</string>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
				<string>%pathname%</string>
			</dict>
		</dict>
        <dict>
	        <key>Processor</key>
	        <string>MunkiImporter</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%pathname%</string>
                <key>repo_subdirectory</key>
                <string>%MUNKI_REPO_SUBDIR%</string>
				<key>pkginfo</key>
				<dict>
					<key>blocking_applications</key>
					<array>
					        <string>ArchiCAD19</string>
					</array>
					<key>description</key>
					<string>ArchiCAD 19 offers a streamlined workflow solution, keeping architects in the state of the creative design flow with as little disruption as possible.</string>
					<key>installer_type</key>
					<string>copy_from_dmg</string>
					<key>installs</key>
					<array>
						<dict>
							<key>CFBundleName</key>
							<string>uninstaller</string>
							<key>CFBundleShortVersionString</key>
							<string>%version%</string>
							<key>minosversion</key>
							<string>10.9.0</string>
							<key>path</key>
							<string>/Applications/GRAPHISOFT/ArchiCAD 19/Uninstall.GDS/uninstaller.app</string>
							<key>type</key>
							<string>application</string>
							<key>version_comparison_key</key>
							<string>CFBundleShortVersionString</string>
						</dict>
					</array>
					<key>items_to_copy</key>
					<array>
						<dict>
							<key>destination_path</key>
							<string>/tmp</string>
							<key>group</key>
							<string>admin</string>
							<key>mode</key>
							<string>go-w</string>
							<key>source_item</key>
							<string>%app_name%</string>
							<key>user</key>
							<string>root</string>
						</dict>
					</array>
					<key>name</key>
					<string>%NAME%</string>
					<key>postinstall_script</key>
					<string>#!/bin/sh
			
					LWPID=`ps axww | grep loginwindow | grep -v grep | awk '{print $1}'`

					JAR="/tmp/%app_name%/Contents/Resources/Java/archive.jar"

					launchctl bsexec $LWPID java -jar "$JAR" -W play.auto=YES -silent

					exit $?
					</string>
					<key>update_for</key>
					<array>
						<string>ArchiCAD19</string>
					</array>
				</dict>
            </dict>
        </dict>
    </array>
</dict>
</plist>