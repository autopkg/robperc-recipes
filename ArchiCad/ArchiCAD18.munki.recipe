<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads ArchiCad18 dmg and imports into Munki.</string>
    <key>Identifier</key>
    <string>com.github.robperc.munki.ArchiCAD18</string>
    <key>Input</key>
    <dict>
        <key>MUNKI_REPO_SUBDIR</key>
        <string>apps</string>
        <key>NAME</key>
        <string>ArchiCAD18</string>
		<key>URL</key>
		<string>http://gscdn.graphisoft.com/cdn/AC/18/USA_R2/AC/AC18-4006-USA.dmg</string>
    </dict>
    <key>MinimumVersion</key>
    <string>0.2.0</string>
    <key>Process</key>
    <array>
		<dict>
			<key>Processor</key>
			<string>URLDownloader</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>%URL%</string>
				<key>filename</key>
				<string>%NAME%.dmg</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>AppDmgVersioner</string>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
				<string>%pathname%</string>
			</dict>
		</dict>
        <dict>
	        <key>Processor</key>
	        <string>MunkiImporter</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%pathname%</string>
                <key>repo_subdirectory</key>
                <string>%MUNKI_REPO_SUBDIR%</string>
            </dict>
        </dict>
		<dict>
			<key>Processor</key>
			<string>StopProcessingIf</string>
			<key>Arguments</key>
			<dict>
				<key>predicate</key>
				<string>(munki_repo_changed == FALSE)</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>PlistEditor</string>
			<key>Arguments</key>
			<dict>
				<key>input_plist_path</key>
				<string>%pkginfo_repo_path%</string>
				<key>output_plist_path</key>
				<string>%pkginfo_repo_path%</string>
				<key>plist_data</key>
				<dict>
					<key>name</key>
					<string>%NAME%</string>
					<key>description</key>
					<string>ArchiCAD 18 offers a streamlined workflow solution, keeping architects in the state of the creative design flow with as little disruption as possible.</string>
					<key>installer_type</key>
					<string>copy_from_dmg</string>
					<key>installs</key>
					<array>
						<dict>
							<key>CFBundleIdentifier</key>
							<string>com.graphisoft.ArchiCAD</string>
							<key>CFBundleName</key>
							<string>ArchiCAD</string>
							<key>CFBundleVersion</key>
							<string>%version%</string>
							<key>minosversion</key>
							<string>10.7.0</string>
							<key>path</key>
							<string>/Applications/GRAPHISOFT/ArchiCAD 18/ArchiCAD 18.app</string>
							<key>type</key>
							<string>application</string>
							<key>version_comparison_key</key>
							<string>CFBundleVersion</string>
						</dict>
					</array>
					<key>items_to_copy</key>
					<array>
						<dict>
							<key>destination_path</key>
							<string>/tmp</string>
							<key>group</key>
							<string>admin</string>
							<key>mode</key>
							<string>go-w</string>
							<key>source_item</key>
							<string>ArchiCAD Installer.app</string>
							<key>user</key>
							<string>root</string>
						</dict>
					</array>
					<key>name</key>
					<string>ArchiCAD18</string>
					<key>postinstall_script</key>
					<string>#!/bin/sh
				
					LWPID=`ps axww | grep loginwindow | grep -v grep | awk '{print $1}'`
	
					JAR="/tmp/ArchiCAD Installer.app/Contents/Resources/Java/archive.jar"
	
					launchctl bsexec $LWPID java -jar "$JAR" -silent
	
					exit $?
					</string>
					<key>requires</key>
					<array>
						<string>LicenseManagerTool</string>
					</array>
					<key>uninstall_method</key>
					<string>uninstall_script</string>
					<key>uninstall_script</key>
					<string>#!/bin/sh

					LWPID=`ps axww | grep loginwindow | grep -v grep | awk '{print $1}'`

					JAR="/Applications/GRAPHISOFT/ArchiCAD 18/Uninstall.AC/archive.jar"

					launchctl bsexec $LWPID java -jar "$JAR" -silent

					exit $?
					</string>
				</dict>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>FileMover</string>
			<key>Arguments</key>
			<dict>
				<key>source</key>
				<string>%pkginfo_repo_path%</string>
				<key>target</key>
				<string>%MUNKI_REPO%/pkgsinfo/%MUNKI_REPO_SUBDIR%/ArchiCAD-%version%.plist</string>
			</dict>
		</dict>
    </array>
</dict>
</plist>